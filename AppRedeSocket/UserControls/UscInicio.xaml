<UserControl x:Class="AppRedeSocket.UserControls.UscInicio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppRedeSocket.UserControls"
             mc:Ignorable="d" 
             Height="450" Width="800" KeyUp="UserControl_KeyUp">
    <Grid Background="#FF686868">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="152*"/>
                <RowDefinition Height="246*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="81*"/>
                    <ColumnDefinition Width="187*"/>
                    <ColumnDefinition Width="103*"/>
                    <ColumnDefinition Width="116*"/>
                    <ColumnDefinition Width="294*"/>
                    <ColumnDefinition Width="19*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>


                <!--LABEL IP-->
                <TextBlock Grid.Row="1" 
                           FontSize="15" 
                           Foreground="White" 
                           FontWeight="Bold" 
                           Margin="0,7.8,4.8,8.4" 
                           HorizontalAlignment="Right" Width="15" VerticalAlignment="Center" Height="19" >
                    Ip
                </TextBlock>
                <TextBox Margin="5.2,4.8,4,4.4" 
                         Grid.Row="1" 
                         x:Name="txtIp"
                         Grid.Column="1" 
                         Foreground="#FFE5E6D9"
                         Background="#FF2D2D30" FontSize="20">
                    abc
                </TextBox>

                <!--LABEL NOME-->
                <TextBlock Grid.Row="3" 
                           FontSize="15" 
                           Foreground="White" 
                           FontWeight="Bold" 
                           Margin="0,7.6,4.8,7.6" 
                           HorizontalAlignment="Right" Width="43" VerticalAlignment="Center" Height="20" >
                    Nome
                </TextBlock>

                <TextBox Margin="5.2,4.6,4,4.6" 
                         Grid.Row="3" 
                         x:Name="txtNome"
                         Grid.Column="1" 
                         Foreground="#FFE5E6D9"
                         Background="#FF2D2D30" FontSize="20">
                    abc
                </TextBox>

                <!--LABEL PORTA-->
                <TextBlock Grid.Row="1" 
                           FontSize="15"
                           Grid.Column="2"
                           Foreground="White" 
                           FontWeight="Bold" 
                           Margin="0,7.8,4.2,7.4" 
                           HorizontalAlignment="Right" VerticalAlignment="Center" Height="20" Width="38">
                    Porta
                </TextBlock>

                <!--CAMPO PORTA-->
                <TextBox Margin="5.8,4.8,6.2,4.4" 
                         Grid.Row="1" 
                         Grid.Column="3" 
                         x:Name="txtPorta"
                         Foreground="#FFE5E6D9"
                         Background="#FF2D2D30" FontSize="20">
                    abc
                </TextBox>


                <!--BOTÃO CONECTAR-->
                <Border 
                    x:Name="brdConectar"
                    Grid.Row="1" 
                    Grid.Column="4" 
                    Width="200" 
                    HorizontalAlignment="Right" 
                    Background="#FF58AB65" 
                    CornerRadius="15" MouseUp="brdConectar_MouseUp">
                    <TextBlock Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center">Conectar</TextBlock>
                </Border>
                <!--BOTÃO DESCONECTAR-->
                <Border Grid.Row="3" Grid.Column="4" Width="200" HorizontalAlignment="Right" Background="#FFAB5858" CornerRadius="15">
                    <TextBlock Foreground="White"
                               FontSize="24" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center">
                        Desconectar

                    </TextBlock>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Margin="0,1.8,0,-0.4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="172*"/>
                    <RowDefinition Height="73*"/>
                </Grid.RowDefinitions>
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1"
                            Background="#FF2D2D30"
                            CornerRadius="15"
                            Margin="0, 0 ,0 ,20">

                        <ScrollViewer x:Name="svChat">
                            <StackPanel x:Name="stpChat" >
                                <TextBlock Margin="5" 
                                   x:Name="txtChat" 
                                   Foreground="White" 
                                    
                                   FontSize="20">
                                Matheus

                                </TextBlock>

                            </StackPanel>
                        </ScrollViewer>

                    </Border>
                </Grid>
                <Grid Grid.Row="1" Margin="0,5,0,-0.2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="33*"/>
                            <RowDefinition Height="35*"/>
                        </Grid.RowDefinitions>

                        <Border Background="#FF2D2D30" CornerRadius="15" Margin="0,0,0,1.8">
                            <TextBox Margin="10,0" x:Name="txtCampoChat" 
                                 BorderBrush="Transparent"
                                 Background="Transparent"
                                     Foreground="White" VerticalAlignment="Center" 
                                     VerticalContentAlignment="Center" 
                                     SelectionBrush="Transparent">
                                Oiiiii
                            </TextBox>

                        </Border>

                        <Image x:Name="imgBtnEnviar" Grid.Column="1" Source="/Socket;component/Imagens/send.png" MouseUp="imgBtnEnviar_MouseUp" Margin="0,0,0,1.8" HorizontalAlignment="Right" Width="31"/>
                    </Grid>
                </Grid>

            </Grid>

        </Grid>
    </Grid>
</UserControl>
